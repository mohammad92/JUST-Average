<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.afaneh.justaverage.InfoActivity"
    tools:showIn="@layout/activity_info">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo"
            android:src="@mipmap/ic_launcher_just" />

        <TableRow android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TableRow>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/app_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal" />

        <TableLayout
    android:layout_width="wrap_content"
    android:id="@+id/tableLayout3"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:layout_below="@+id/app_name"></TableLayout>

        <TableRow android:id="@+id/tableRow3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

               <TextView
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/version_caption"
                   android:id="@+id/textView2"
                   android:layout_marginRight="10dp" />

               <TextView
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/version"
                   android:id="@+id/textView3"
                   android:layout_marginRight="8dp" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/just"
            android:id="@+id/just"
            android:layout_below="@+id/tableLayout3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/me"
            android:id="@+id/me"
            android:layout_below="@+id/just"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
